<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <androidx.cardview.widget.CardView
        android:id="@+id/festival_cardView"
        android:layout_width="320dp"
        android:layout_height="100dp"
        app:cardCornerRadius="0dp"
        android:layout_marginVertical="10dp"
        app:cardElevation="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_img"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/festival_main"
                android:scaleType="centerCrop"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/festival_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="축제명"
                    android:textColor="#191919"
                    android:textSize="23dp" />

                <TextView
                    android:id="@+id/festival_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8dp"
                    android:text="2023.10.7. (토) 12~17시 "
                    android:textColor="#191919"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/festival_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:text="왕십리광장(북측)"
                    android:textColor="#191919"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>