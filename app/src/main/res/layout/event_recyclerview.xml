<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <androidx.cardview.widget.CardView
        android:id="@+id/event_cardView"
        android:layout_width="380dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/light_mint"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="10dp"
        app:cardElevation="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_img"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/festival_main"
                android:scaleType="centerCrop"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이벤트명"
                    android:textColor="#191919"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/event_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="2023.10.7."
                        android:textColor="#191919"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ~ "
                        android:textColor="#191919"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/event_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023.10.8."
                        android:textColor="#191919"
                        android:textSize="12dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/event_ing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="3dp"
                    android:text="진행중"
                    android:textColor="#191919"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/event_close"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="3dp"
                    android:text="진행완료"
                    android:textColor="#191919"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>